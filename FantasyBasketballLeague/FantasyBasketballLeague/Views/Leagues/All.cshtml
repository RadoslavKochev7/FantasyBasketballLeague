@using FantasyBasketballLeague.Infrastructure.Data.Constants
@model IEnumerable<LeagueViewModel>

@{
    ViewBag.Title = "All Leagues";
}

<h1 class="text-center" style="color:white">@ViewBag.Title</h1>
<hr style="color:white" />
<input class="btn btn-success" value="Create" onclick="location.href='@Url.Action("Create","Leagues")';" />
<br />
<br />

<div class="text-center row">
    @foreach (var league in Model)
    {
        <div class="card col-4" style="width: 18rem; margin:auto; background-color:lightgrey">
            <div class="card-body">

                <h5 class="card-title mt-1">@($"{league.Name}")</h5>
                <p class="mb-0">Teams: @league.Count</p>

            </div>

            <form class="input-group-sm" asp-controller="League" asp-action="All">
            </form>
            <table>
                <tr class="actions">
                    <th><span class="fw-bold">Actions:</span></th>
                    <td>
                        <a asp-controller="Leagues" asp-action="Details" asp-route-id="@league.Id" class="btn btn-primary">View</a>
                        <a asp-controller="Leagues" asp-action="Edit" asp-route-id="@league.Id" class="btn btn-warning">Edit</a>
                        @if (User.IsInRole(RoleConstants.Administrator))
                        {
                            <a asp-controller="Leagues" asp-action="Delete" asp-route-id="@league.Id" class="btn btn-danger">Delete</a>
                        }
                    </td>
                </tr>
            </table>
            </div>
    }
</div>
    
