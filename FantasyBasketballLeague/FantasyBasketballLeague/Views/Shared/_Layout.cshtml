@using FantasyBasketballLeague.Infrastructure.Data.Constants
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fantasy Basketball League</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FantasyBasketballLeague.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Fantasy Basketball League</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown" aria-expanded="false">
                                    Teams
                                </button>
                                <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuButton2">
                                    <li>
                                        <a asp-area="" class="dropdown-item" asp-controller="Teams" asp-action="Create">Create</a>
                                        <a asp-area="" class="dropdown-item" asp-controller="Teams" asp-action="All">All Teams</a>
                                        <a asp-area="" class="dropdown-item" asp-controller="Teams" asp-action="Mine">Mine</a>
                                    </li>
                                </ul>
                            </div>
                            @if (User.IsInRole(RoleConstants.Administrator))
                            {
                                <div class="dropdown">
                                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown" aria-expanded="false">
                                        Positions
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuButton2">
                                        <li>
                                            <a asp-area="" class="dropdown-item" asp-controller="Positions" asp-action="Create">Create</a>
                                            <a asp-area="" class="dropdown-item" asp-controller="Positions" asp-action="All">All Teams</a>
                                        </li>
                                    </ul>
                                </div>
                            }

                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown" aria-expanded="false">
                                    Players
                                </button>
                                <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuButton2">
                                    <li><a href="@Url.Action("Create", "BasketballPlayer")" class="dropdown-item"><span>Create</span></a></li>
                                    <li><a href="@Url.Action("All", "BasketballPlayer")" class="dropdown-item"><span>All Players</span></a></li>
                                </ul>
                            </div>

                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown" aria-expanded="false">
                                    Coaches
                                </button>
                                <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuButton2">
                                    <li><a href="@Url.Action("Create", "Coach")" class="dropdown-item"><span>Create</span></a></li>
                                    <li><a href="@Url.Action("All", "Coach")" class="dropdown-item"><span>All Coaches</span></a></li>
                                </ul>
                            </div>

                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown" aria-expanded="false">
                                    Leagues
                                </button>
                                <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuButton2">
                                    <li><a href="@Url.Action("Create", "Leagues")" class="dropdown-item"><span>Create</span></a></li>
                                    <li><a href="@Url.Action("All", "Leagues")" class="dropdown-item"><span>All Leagues</span></a></li>
                                </ul>
                            </div>

                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="BecomeAdmin">Become Admin</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="LeaveAdmin">Quit Admin</a>

                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container" style="color:lightgray" sty>
            &copy; @DateTime.UtcNow.Year - FantasyBasketballLeague
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await Component.InvokeAsync("Notyf")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
