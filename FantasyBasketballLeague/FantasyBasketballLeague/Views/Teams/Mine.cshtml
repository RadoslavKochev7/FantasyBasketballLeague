@model IEnumerable<MyTeamViewModel>

@{
    ViewBag.Title = "My Teams";
}

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        td, th {
            border: solid 1px black;
        }

    </style>
</head>

<h1 class="text-center" style="color:white">@ViewBag.Title</h1>
<hr style="color:white" />

<input class="btn btn-success" value="Create Player" onclick="location.href='@Url.Action("Create","BasketballPlayer")';" />
<input class="btn btn-success" value="Create Team" onclick="location.href='@Url.Action("Create","Teams")';" />


@if (Model.Any())
{
    <div class="text-center row">
        @foreach (var team in Model)
        {
            <div class="card col-4" style="width: 20rem; margin: auto;">
                <img class="card-img-top" style="width: 18rem; height:20rem"
             src="@team.LogoUrl" alt="Team logo Image">
                <div class="card-body">

                    <h5 class="card-title mt-1">@team.Name</h5>
                    <p class="card-text"><span class="fw-bold">Players: </span>@team.Players.Count()</p>
                    <input class="btn btn-primary" value="Details" onclick="location.href='@Url.Action("Details","Teams", new {team.Id})';" />
                </div>
            </div>


            <table id="dtBasicExample" class="table" width="100%" style="color:black; background-color:lightgray; margin:1rem">
                <thead>
                    <tr>
                        <th class="th-sm">
                            ID
                        </th>
                        <th class="th-sm">
                            First Name
                        </th>
                        <th class="th-sm">
                            Last Name
                        </th>
                        <th class="th-sm">
                            Position
                        </th>
                        <th class="th-sm">
                            Jersey Number
                        </th>
                        <th class="th-sm">
                            Is Captain
                        </th>
                        <th class="th-sm">
                            Is Starter
                        </th>
                        <th class="th-sm">
                            Seasons Played
                        </th>
                        <th class="th-sm">
                            Experience
                        </th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var player in team.Players)
                    {
                        <tr style="border-color:black">
                            <td><a href="/BasketballPlayer/Details?id=@player.Id">@player.Id</a></td>
                            <td>@player.FirstName</td>
                            <td>@player.LastName</td>
                            <td>@player.Position</td>
                            <td>@player.JerseyNumber</td>
                            <td>@player.IsTeamCaptain</td>
                            <td>@player.IsStarter</td>
                            <td>@player.SeasonsPlayed</td>
                            <td>@player.Experience</td>
                        </tr>
                    }
                </tbody>

                <tfoot>
                    <tr>
                        <th class="th-sm">
                            ID
                        </th>
                        <th class="th-sm">
                            First Name
                        </th>
                        <th class="th-sm">
                            Last Name
                        </th>
                        <th class="th-sm">
                            Position
                        </th>
                        <th class="th-sm">
                            Jersey Number
                        </th>
                        <th class="th-sm">
                            Is Captain
                        </th>
                        <th class="th-sm">
                            Is Starter
                        </th>
                        <th class="th-sm">
                            Seasons Played
                        </th>
                        <th class="th-sm">
                            Experience
                        </th>
                    </tr>
                </tfoot>
            </table>

        }

    </div>
}
else
{
    <h1 class="text-center" style="color:white">You have no teams yet!</h1>

}

<script>
    $(document).ready(function () {
        $('#dtBasicExample').DataTable();
        $('.dataTables_length').addClass('bs-select');
    });
</script>
