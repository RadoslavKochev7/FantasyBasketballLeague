@using FantasyBasketballLeague.Core.Models.Teams
@model TeamAddModel

@{
    ViewBag.Title = "Create a new Team";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    <div class="row">
        <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="@Model.Name" class="form-label">Name</label>
                    <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.LogoUrl" class="form-label">Logo URL</label>
                    <input asp-for="@Model.LogoUrl" class="form-control" aria-required="true" />
                    <span asp-validation-for="LogoUrl" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.LeagueId" class="form-label">League</label>
                    <select asp-for="@Model.LeagueId" class="form-control">
                        <option value="@Model.LeagueId">Please Select...</option>
                        @foreach (var league in Model.Leagues)
                        {
                            <option value="@league.Id">@league.Name</option>
                        }
                    </select>
                    <span asp-validation-for="LeagueId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.CoachId" class="form-label">Coach</label>
                    <select asp-for="@Model.CoachId" class="form-control">
                        <option value="@Model.CoachId">Please Select...</option>
                        @foreach (var coach in Model.Coaches)
                        {
                            <option value="@coach.Id">@($"{coach.FirstName} {coach.LastName}")</option>
                        }
                    </select>
                    <span asp-validation-for="CoachId" class="text-danger"></span>
                </div>
                <input class="btn btn-primary" type="submit" value="Save" />
                <input class="btn btn-secondary" value="Cancel" onclick="location.href='@Url.Action("All","Teams")';" />
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }
