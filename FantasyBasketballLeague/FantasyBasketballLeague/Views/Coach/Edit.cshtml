@model CoachDetailsModel
@{
    ViewBag.Title = "Edit coach";
}

<h1 class="text-center" style="color:white">@ViewBag.Title</h1>
<hr style="color:white" />

<div class="text row" style="color:white; font-size:large">
    <div class="row">
        <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
            <form asp-action="Edit" method="post">
                <div class="mb-3">
                    <label asp-for="@Model.FirstName" class="form-label">First Name</label>
                    <input asp-for="@Model.FirstName" class="form-control" aria-required="false" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.LastName" class="form-label">Last Name</label>
                    <input asp-for="@Model.LastName" class="form-control" aria-required="false" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.ImageUrl" class="form-label">Image URL</label>
                    <input asp-for="@Model.ImageUrl" class="form-control" aria-required="false" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.TeamId" class="form-label">Team</label>
                    <select asp-for="@Model.TeamId" class="form-control">
                        <option value="" selected>Please Choose...</option>
                        @foreach (var team in Model.Teams)
                        {
                            <option value="@team.Id">@team.Name</option>
                        }
                    </select>
                    <span asp-validation-for="TeamId" class="text-danger"></span>
                </div>
                <input class="btn btn-primary" type="submit" value="Save" />
                <input class="btn btn-secondary" value="Cancel" onclick="location.href='@Url.Action("All","Coach")';" />
            </form>
        </div>
    </div>
</div>


@section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
