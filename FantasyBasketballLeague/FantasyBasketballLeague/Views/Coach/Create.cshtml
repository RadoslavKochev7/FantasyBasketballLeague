@using FantasyBasketballLeague.Core.Models.Coach
@model CoachViewModel

@{
    ViewBag.Title = "Create new coach";
}

<h1 class="text-center" style="color:white">@ViewBag.Title</h1>
<hr style="color:white" />

<div class="text-center row">
    <div class="row" style="color:white">
        <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="@Model.FirstName" class="form-label">First Name</label>
                    <input asp-for="@Model.FirstName" class="form-control" aria-required="true" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.LastName" class="form-label">Last Name</label>
                    <input asp-for="@Model.LastName" class="form-control" aria-required="true" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.ImageUrl" class="form-label">Image URL</label>
                    <input asp-for="@Model.ImageUrl" class="form-control" aria-required="false" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
                <input class="btn btn-primary" type="submit" value="Save" />
                <input class="btn btn-secondary" value="Cancel" onclick="location.href='@Url.Action("All","Coach")';" />
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }
