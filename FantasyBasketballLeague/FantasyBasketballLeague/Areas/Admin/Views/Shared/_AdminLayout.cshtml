<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fantasy Basketball League</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FantasyBasketballLeague.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <div class="container-fluid">
                        <a class="navbar-brand" asp-area="Admin" asp-controller="Home" asp-action="Index">Fantasy Basketball League</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" 
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                    <a class="navbar-brand" asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a>
                                <li class="nav-item dropdown">
                                    <a class="nav-link active dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Teams
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDropdown">
                                        <li>
                                            <a asp-area="" class="dropdown-item" asp-controller="Teams" asp-action="Create">Create</a>
                                            <a asp-area="" class="dropdown-item" asp-controller="Teams" asp-action="All">All Teams</a>
                                            <a asp-area="" class="dropdown-item" asp-controller="Teams" asp-action="Mine">Mine</a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link active dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Coaches
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDropdown">
                                        <li>
                                            <a asp-area="" class="dropdown-item" asp-controller="Coach" asp-action="Create">Create</a>
                                            <a asp-area="" class="dropdown-item" asp-controller="Coach" asp-action="All">All Coaches</a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link active dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Leagues
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDropdown">
                                        <li>
                                            <a asp-area="" class="dropdown-item" asp-controller="Leagues" asp-action="Create">Create</a>
                                            <a asp-area="" class="dropdown-item" asp-controller="Leagues" asp-action="All">All Leagues</a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link active dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Positions
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDropdown">
                                        <li>
                                            <a asp-area="" class="dropdown-item" asp-controller="Positions" asp-action="Create">Create</a>
                                            <a asp-area="" class="dropdown-item" asp-controller="Positions" asp-action="All">All Positions</a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link active dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Players
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDropdown">
                                        <li>
                                            <a asp-area="" class="dropdown-item" asp-controller="BasketballPlayer" asp-action="Create">Create</a>
                                            <a asp-area="" class="dropdown-item" asp-controller="BasketballPlayer" asp-action="All">All Players</a>
                                        </li>
                                    </ul>
                                </li>
                                <li>
                                    <a asp-area="Admin" class="nav-link active" asp-controller="User" asp-action="CreateRole">Create Role</a>
                                </li>
                                <li>
                                    <a asp-area="Admin" class="nav-link active" asp-controller="User" asp-action="ManageUsers">Manage Users</a>
                                </li>
                                <li>
                                    <a asp-area="" class="nav-link active" asp-controller="User" asp-action="LeaveAdmin">Quit Admin</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
                    <partial name="_LoginPartial" />
                </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container" style="color:lightgray" sty>
            &copy; @DateTime.UtcNow.Year - Fantasy Basketball League - Admin Area
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await Component.InvokeAsync("Notyf")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
