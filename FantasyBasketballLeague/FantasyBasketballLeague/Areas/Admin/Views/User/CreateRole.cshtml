@model IdentityRoleCreateModel

@{
    ViewBag.Title = "Create new role";
}

<h2 class="text-center" style="color:white">@ViewBag.Title</h2>
<hr style="color:white" />

<div class="text-center row">
    <div class="row" style="color:white">
        <div class="col-sm-8 offset-lg-2 col-lg-4 offset-xl-3 col-xl-4">
            <form asp-action="CreateRole" method="post">
                <div class="mb-3" style="margin:auto; font-size:x-large">
                    <label asp-for="@Model.Name" class="form-label">Name</label>
                    <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <input class="btn btn-success" type="submit" value="Save" />
                <a class="btn btn-primary" title="Go back to previuos page" href='javascript:history.go(-1)'>Back</a>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }
